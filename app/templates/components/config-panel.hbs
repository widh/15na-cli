<div id="config-panel" class="div-inline contents panel">
  <h2>Configurations</h2>
  <div id="config-fields">
    <input class="uk-input" type="text" id="config-site" placeholder="Server Address">
    <input class="uk-input" type="password" id="config-id" placeholder="Authentication ID">
    <button id="config-button" class="uk-button uk-button-primary" onclick={{action "tryConnect"}}>Connect</button>
    <button class="uk-button uk-button-danger" onclick={{action "dispAlert"}}>Alert Test</button>
  </div>
  <div id="config-spinner-container" class="if">
    <div id="config-spinner" class="true" uk-spinner></div>
  </div>
</div>
